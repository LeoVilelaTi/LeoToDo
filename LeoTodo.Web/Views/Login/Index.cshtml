@model LeoTodo.Web.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/CSS")

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="header">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"> Projeto ToDo</a>
                </div>
                @if (Session["UsuarioLogado"] != null)
                {
                    <div id="navbar" class="navbar-collapse collapse">
                        <div class="navbar-form navbar-right">

                            <a href="~/Login/LogOut" type="submit" class="btn btn-success">Sair</a>

                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>

    <div class="container">
        @using (@Html.BeginForm("Login", "LogIn", FormMethod.Post))
        {
            <div class="col-xs-4"></div>
            <div class="col-xs-4">
                <div class="jumbotron">
                    <h3> Tela de Login </h3>
                    <div class="form-group">
                        @Html.TextBox("Identificador", Model.Identificador, new { @class = "form-control", placeholder = "Usuário" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Senha", Model.Senha, new { @class = "form-control", placeholder = "Senha", @type = "password" })
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Esqueceu sua senha?", "EsqueciMinhaSenha", "Usuario")
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Entrar</button>
                    </div>
                </div>
                <div class="form-group text-center">
                    @Html.ActionLink("Criar sua conta", "Index", "Usuario")
                </div>
            </div>
            <div class="col-xs-4"></div>
        }
    </div>

</body>
</html>
