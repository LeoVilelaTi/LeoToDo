@model LeoTodo.Web.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title> Tela de login do site </title>

    @Styles.Render("~/CSS")

</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="header">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"> Projeto ToDo</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @using (@Html.BeginForm("Login", "LogIn", FormMethod.Post))
        {
            <div class="col-xs-4"></div>
            <div class="col-xs-4">
                <div class="jumbotron">
                    <h3> Tela de Login </h3>
                    <div class="form-group">
                        @Html.TextBox("Identificador", Model.Identificador, new { @class = "form-control", placeholder = "Usuário"}) 
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Senha", Model.Senha, new { @class = "form-control", placeholder = "Senha", @type="password" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Entrar</button>
                    </div>
                </div>
            </div>
            <div class="col-xs-4"></div>
        }
    </div>


</body>
</html>